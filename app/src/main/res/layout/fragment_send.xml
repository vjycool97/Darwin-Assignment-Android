<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty_dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/thirty_dp">
        <RelativeLayout
            android:id="@+id/relative_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:layout_alignParentLeft="true"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/font_xxlarge"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/values_send"
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/font_xxlarge"/>

        </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/fifty_dp"
    android:gravity="center_vertical"
    android:layout_below="@+id/relative_amount"
    android:layout_alignParentRight="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="= "
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_xlarge"
        android:layout_marginTop="@dimen/fab_margin"
        android:textColor="@color/light_grey_two"/>
    <TextView
        android:id="@+id/amount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_xlarge"
        android:layout_gravity="center_vertical"
        android:lines="1"
        android:maxLength="10"
        android:layout_marginTop="@dimen/fab_margin"
        android:textColor="@color/light_grey_two"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   USD"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_xlarge"
        android:layout_marginTop="@dimen/fab_margin"
        android:textColor="@color/light_grey_two"/>

</LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty_dp">
        <TableRow
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:weightSum="12">
                <TextView
                    android:id="@+id/btn_one"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:layout_weight="4"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="@dimen/font_xlarge"
                    android:textColor="@color/black"
                    android:background="@color/transparent"/>
            <TextView
                android:id="@+id/btn_two"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="4"
                android:text="2"
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/btn_three"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="4"
                android:text="3"
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:weightSum="12">
            <TextView
                android:id="@+id/btn_four"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="4"
                android:text="4"
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/btn_five"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="4"
                android:text="5"
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/btn_six"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="4"
                android:text="6"
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:weightSum="12">
            <TextView
                android:id="@+id/btn_seven"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="4"
                android:text="7"
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/btn_eight"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="4"
                android:text="8"
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/btn_nine"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="4"
                android:text="9"
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:weightSum="12">
            <ImageView
                android:id="@+id/btn_backspace"
                android:layout_width="0dp"
                android:layout_height="@dimen/twentyfive_dp"
                android:layout_weight="4"
                android:src="@drawable/backspace"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/btn_zero"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="4"
                android:text="0"
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/btn_decimal"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="4"
                android:text="."
                android:gravity="center"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/fifty_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:src="@drawable/forwardchevron"
        android:background="@drawable/button_shape"/>


</LinearLayout>
